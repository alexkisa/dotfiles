execute pathogen#infect()

filetype plugin on
filetype indent on

" User interface
set autoread
set wildmenu
set showmatch
set hidden
set ignorecase
set smartcase
set incsearch

" Appearance
syntax enable
colorscheme desert
set encoding=utf8

" Tabs and spaces
set expandtab
set smarttab
set shiftwidth=4
set tabstop=4
set autoindent
set smartindent
